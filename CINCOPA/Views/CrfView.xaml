                                </Grid>
                            </HeaderedContentControl>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Нежелательные явления">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Отмечалось ли в ходе исследования развитие НЯ?:" />
                                <ComboBox
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=AE_LOGIC, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=Logic2Lookup}" />
                            </StackPanel>

                            <ToolBar>
                                <Button Command="{Binding AddAECommand}" Content="Добавить" ToolTip="Добавить"/>
                                <Separator/>
                                <Button Command="{Binding DeleteAECommand}" Content="Удалить" ToolTip="Удалить"/>
                                <Separator/>
                            </ToolBar>
                            <DataGrid AutoGenerateColumns="False"
                            ItemsSource="{Binding AllAE}"
                                  SelectedItem="{Binding CurrentAE}" CanUserAddRows="False" CanUserDeleteRows="False">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn  Header="Нежелательное явление">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <TextBox Text="{Binding Path=AE_NAME, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, NotifyOnValidationError=True}" Width="200"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header= "Дата начала" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <xctk:MaskedTextBox   Mask="00/00/0000" ValueDataType="{x:Type s:DateTime}" Value="{Binding Path=AE_DATE_START, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header= "Дата окончания" >
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <xctk:MaskedTextBox   Mask="00/00/0000" ValueDataType="{x:Type s:DateTime}" Value="{Binding Path=AE_DATE_END, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header= "Тяжесть НЯ">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox 
                                                                        IsEnabled="True"
                                                                      SelectedValuePath="." 
                                                                      SelectedItem="{Binding Path=AE_HEAVY, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=False,NotifyOnValidationError=False}" 
                                                                      ItemsSource="{Binding Path=AEHeavyLookup}" 
                                                                      />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header= "Исход НЯ">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox 
                                                                        IsEnabled="True"
                                                                      SelectedValuePath="." 
                                                                      SelectedItem="{Binding Path=AE_RESULT, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=False,NotifyOnValidationError=False}" 
                                                                      ItemsSource="{Binding Path=AEResultLookup}" 
                                                                      />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header= "Связь НЯ с исследуемым препаратом">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox 
                                                                        IsEnabled="True"
                                                                      SelectedValuePath="." 
                                                                      SelectedItem="{Binding Path=AE_RELATION, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=False,NotifyOnValidationError=False}" 
                                                                      ItemsSource="{Binding Path=AERelationLookup}" 
                                                                      />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header= "Принятые меры">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ComboBox 
                                                                        IsEnabled="True"
                                                                      SelectedValuePath="." 
                                                                      SelectedItem="{Binding Path=AE_ACTIONS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=False,NotifyOnValidationError=False}" 
                                                                      ItemsSource="{Binding Path=AEActionsLookup}" 
                                                                      />
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                    </TabItem>
                </TabControl>


            </Grid>
        </DockPanel>
    </ScrollViewer>
</Window>
