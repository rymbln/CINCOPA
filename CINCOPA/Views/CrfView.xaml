<Window x:Class="CINCOPA.Views.CrfView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="clr-namespace:System;assembly=mscorlib"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="CrfView" Height="768" Width="1024">
    <ScrollViewer>
        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar>
                    <Button Command="{Binding SaveCommand}" Content="Сохранить"/>
                    <Separator/>
                    <Button Command="{Binding CheckCommand}" Content="Проверить"/>
                    <Separator/>
                    <Button Command="{Binding CancelCommand}" Content="Отмена"/>
                </ToolBar>
            </ToolBarTray>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <HeaderedContentControl Grid.Row="0" Style="{StaticResource SubDisplayArea}" Margin="2">
                    <HeaderedContentControl.Header>
                        Личная информация
                    </HeaderedContentControl.Header>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Column="0" Grid.Row="0" Content="№ ИРК:"  />
                        <TextBox Grid.Column="1" Grid.Row="0" 
                                 Text="{Binding Path=FieldNUMBER, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />

                        <Label Grid.Column="2" Grid.Row="0" Content="Отделение госпитализации:" />
                        <ComboBox Grid.Column="3" Grid.Row="0"  
                                  SelectedValuePath="." 
                                  SelectedItem="{Binding Path=FieldWARD, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                  ItemsSource="{Binding Path=WardLookup}" 
                                  DisplayMemberPath="NAME" />

                        <Label Grid.Column="4" Grid.Row="0" Content="ФИО Пациента:" />
                        <TextBox Grid.Column="5" Grid.Row="0" 
                                 Text="{Binding Path=FieldNAME, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />

                        <Label Grid.Column="0" Grid.Row="1" Content="Дата рождения пациента" />
                        <xctk:MaskedTextBox   Grid.Column="1" Grid.Row="1" 
                                                      Mask="00/00/0000"
                                                      ValueDataType="{x:Type s:DateTime}">
                            <Binding Path="FieldDATE_BIRTH" 
                                                 Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                                 ValidatesOnDataErrors="True" NotifyOnValidationError="True"/>
                        </xctk:MaskedTextBox>

                        <Label Grid.Column="2" Grid.Row="1" Content="Дата госпитализации" />
                        <xctk:MaskedTextBox   Grid.Column="3" Grid.Row="1" 
                                                      Mask="00/00/0000"
                                                      ValueDataType="{x:Type s:DateTime}">
                            <Binding Path="FieldDATE_HOSPITALIZATION" 
                                                 Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                                 ValidatesOnDataErrors="True" NotifyOnValidationError="True"/>
                        </xctk:MaskedTextBox>

                        <Label Grid.Column="4" Grid.Row="1" Content="Дата выписки" />
                        <xctk:MaskedTextBox   Grid.Column="5" Grid.Row="1" 
                                                      Mask="00/00/0000"
                                                      ValueDataType="{x:Type s:DateTime}">
                            <Binding Path="FieldDATE_DISCHARGE" 
                                                 Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                                 ValidatesOnDataErrors="True" NotifyOnValidationError="True"/>
                        </xctk:MaskedTextBox>

                    </Grid>
                </HeaderedContentControl>
                <HeaderedContentControl Grid.Row="1" Style="{StaticResource SubDisplayArea}" Margin="2">
                    <HeaderedContentControl.Header>
                        ВИЗИТ 1
                    </HeaderedContentControl.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                            <Label  Content="ДАТА ВИЗИТА 1" />
                            <xctk:MaskedTextBox
                                                      Mask="00/00/0000"
                                                      ValueDataType="{x:Type s:DateTime}">
                                <Binding Path="FieldDATE_VISIT_ONE" 
                                                 Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                                 ValidatesOnDataErrors="True" NotifyOnValidationError="True"/>
                            </xctk:MaskedTextBox>
                        </StackPanel>
                        <HeaderedContentControl Grid.Row="1" Style="{StaticResource SubDisplayArea}" Margin="2">
                            <HeaderedContentControl.Header>
                                Анамнестические данные
                            </HeaderedContentControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="0" Grid.Row="0"
                                    Content="Дата появления симптомов ВП (ИНДП)" />
                                <xctk:MaskedTextBox Grid.Column="1" Grid.Row="0"
                                                      Mask="00/00/0000"
                                                      ValueDataType="{x:Type s:DateTime}">
                                    <Binding Path="FieldVISIT_ONE_ANAMNESTIC_DATE_SYMPTOM" 
                                                 Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                                 ValidatesOnDataErrors="True" NotifyOnValidationError="True"/>
                                </xctk:MaskedTextBox>

                                <Label Grid.Column="2" Grid.Row="0"
                                    Content="Дата установления диагноза ХСН" />
                                <xctk:MaskedTextBox Grid.Column="3" Grid.Row="0"
                                                      Mask="00/00/0000"
                                                      ValueDataType="{x:Type s:DateTime}">
                                    <Binding Path="FieldVISIT_ONE_ANAMNESTIC_DATE_DIAGNOSIS" 
                                                 Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                                 ValidatesOnDataErrors="True" NotifyOnValidationError="True"/>
                                </xctk:MaskedTextBox>

                                <Label Grid.Column="0" Grid.Row="1" Content="Количество эпизодов декомпенсации в течение последний 12 месяцев"  />
                                <TextBox Grid.Column="1" Grid.Row="1" 
                                 Text="{Binding Path=FieldVISIT_ONE_ANAMNESTIC_NUMBER_EPISODES, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />

                                <Label Grid.Column="2" Grid.Row="1" Content="Нет данных"  />
                                <!--<CheckBox Grid.Column="3" Grid.Row="1" 
                                 Checked="{Binding Path=FieldVISIT_ONE_ANAMNESTIC_NUMBER_EPISODES_NODATA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />-->

                                <Label Grid.Column="0" Grid.Row="2" Content="ФК ХСН:" />
                                <ComboBox Grid.Column="1" Grid.Row="2"  
                                  SelectedValuePath="." 
                                  SelectedItem="{Binding Path=FieldVISIT_ONE_ANAMNESTIC_FUNCTION_CLASS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                  ItemsSource="{Binding Path=FkLookup}" />

                                <Label Grid.Column="2" Grid.Row="2" Content="Были ли другие эпзоды ВП в течение последних 12 месяцев:" />
                                <ComboBox Grid.Column="3" Grid.Row="2"  
                                  SelectedValuePath="." 
                                  SelectedItem="{Binding Path=FieldVISIT_ONE_ANAMNESTIC_OTHER_EPISODES, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                  ItemsSource="{Binding Path=Logic3Lookup}" />

                                <Label Grid.Column="0" Grid.Row="3" Content="Статус курения:" />
                                <ComboBox Grid.Column="1" Grid.Row="3"  
                                  SelectedValuePath="." 
                                  SelectedItem="{Binding Path=FieldVISIT_ONE_ANAMNESTIC_SMOKE_STATUS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                  ItemsSource="{Binding Path=SmokeStatusLookup}" />

                                <Label Grid.Column="2" Grid.Row="3" Content="Среднее число выкуриваемых сигарет в день:"  />
                                <TextBox Grid.Column="3" Grid.Row="3" 
                                 Text="{Binding Path=FieldVISIT_ONE_ANAMNESTIC_SMOKE_AVERAGE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />

                                <Label Grid.Column="0" Grid.Row="4" Content="Число лет курения:"  />
                                <TextBox Grid.Column="1" Grid.Row="4" 
                                 Text="{Binding Path=FieldVISIT_ONE_ANAMNESTIC_SMOKE_YEARS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />

                                <Label Grid.Column="2" Grid.Row="4" Content="Число пачка/лет:"  />
                                <TextBox Grid.Column="3" Grid.Row="4" 
                                 Text="{Binding Path=FieldVISIT_ONE_ANAMNESTIC_SMOKE_PACK_YEARS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />



                            </Grid>
                        </HeaderedContentControl>
                        <HeaderedContentControl Grid.Row="2" Style="{StaticResource SubDisplayArea}" Margin="2">
                            <HeaderedContentControl.Header>
                                Основные показатели жизнедеятельности
                            </HeaderedContentControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"
                                        Style="{StaticResource DetailBorder}">
                                    <Grid >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="0" Grid.Row="0"
                                               Content="АД Правая рука" />
                                        <Label Grid.Column="1" Grid.Row="0"
                                               Content="АД Левая рука" />
                                        <Label Grid.Column="2" Grid.Row="0"
                                               Content="ЧСС/мин" />
                                        <Label Grid.Column="3" Grid.Row="0"
                                               Content="ЧДД/мин" />
                                        <Label Grid.Column="4" Grid.Row="0"
                                               Content="Температура тела" />
                                        <TextBox Grid.Column="0" Grid.Row="1" 
                                                 Text="{Binding Path=FieldVISIT_ONE_BLOOD_PRESSURE_RIGHT_HAND, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />
                                        <TextBox Grid.Column="1" Grid.Row="1" 
                                                 Text="{Binding Path=FieldVISIT_ONE_BLOOD_PRESSURE_LEFT_HAND, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />
                                        <TextBox Grid.Column="2" Grid.Row="1" 
                                                 Text="{Binding Path=FieldVISIT_ONE_HEART_RATE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />
                                        <TextBox Grid.Column="3" Grid.Row="1" 
                                                 Text="{Binding Path=FieldVISIT_ONE_RESPIRATORY_RATE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />
                                        <TextBox Grid.Column="4" Grid.Row="1" 
                                                 Text="{Binding Path=FieldVISIT_ONE_TEMPERATURE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />

                                    </Grid>
                                </Border>

                                <Label Grid.Column="1" Grid.Row="0" Content="Степени тяжести ВП:" />
                                <ComboBox Grid.Column="2" Grid.Row="0"  
                                  SelectedValuePath="." 
                                  SelectedItem="{Binding Path=FieldVISIT_ONE_HEAVY_TYPE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                  ItemsSource="{Binding Path=HeavyLookup}" />

                                <Label Grid.Column="1" Grid.Row="1" Content="Пациент нуждается в оксигенотерапии:" />
                                <ComboBox Grid.Column="2" Grid.Row="1"  
                                  SelectedValuePath="." 
                                  SelectedItem="{Binding Path=FieldVISIT_ONE_OXYGEN_THERAPY_NEEDED, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                  ItemsSource="{Binding Path=Logic2Lookup}" />

                                <Label Grid.Column="1" Grid.Row="2" Content="Наличие признаков декомпенсации ХСН:" />
                                <ComboBox Grid.Column="2" Grid.Row="2"  
                                  SelectedValuePath="." 
                                  SelectedItem="{Binding Path=FieldVISIT_ONE_DECOMPENSATION_SIGNS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                  ItemsSource="{Binding Path=Logic2Lookup}" />

                            </Grid>
                        </HeaderedContentControl>

                        <HeaderedContentControl Grid.Row="3" Style="{StaticResource SubDisplayArea}" Margin="2">
                            <HeaderedContentControl.Header>
                                Оценка симптомов ВП и ХСН
                            </HeaderedContentControl.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Label Grid.Column="0" Grid.Row="0" Content="Появление или усиление одышки:" />
                                <ComboBox Grid.Column="1" Grid.Row="0"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_DYSPNEA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />

                                <Label Grid.Column="2" Grid.Row="0" Content="Появление или усиление кашля:" />
                                <ComboBox Grid.Column="3" Grid.Row="0"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_COUGH, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />

                                <Label Grid.Column="4" Grid.Row="0" Content="Наличие мокроты:" />
                                <ComboBox Grid.Column="5" Grid.Row="0"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_SPUTUM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />

                                <Label Grid.Column="0" Grid.Row="1" Content="Характер мокроты:" />
                                <ComboBox Grid.Column="1" Grid.Row="1"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_SPUTUM_TYPE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=sputumTypeLookup}" />

                                <Label Grid.Column="2" Grid.Row="1" Content="Повышение температуры тела:" />
                                <ComboBox Grid.Column="3" Grid.Row="1"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_TEMPERATURE_INCREASE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />

                                <Label Grid.Column="4" Grid.Row="1" Content="Наличие сиптомов простуды:" />
                                <ComboBox Grid.Column="5" Grid.Row="1"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_COLD_SYMPTOM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />

                                <Label Grid.Column="0" Grid.Row="2" Content="Укорочение перкуторного звука:" />
                                <ComboBox Grid.Column="1" Grid.Row="2"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_SHORTERING_OF_PERCUSSION_SOUNDS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />

                                <Label Grid.Column="2" Grid.Row="2" Content="Влажные мелкопузырчатые хрипы:" />
                                <ComboBox Grid.Column="3" Grid.Row="2"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_MOIST_RALES_SOUNDS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />

                                <Label Grid.Column="4" Grid.Row="2" Content="Крепитация:" />
                                <ComboBox Grid.Column="5" Grid.Row="2"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_CREPITUS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />

                                <Label Grid.Column="0" Grid.Row="3" Content="Шум трения плевры:" />
                                <ComboBox Grid.Column="1" Grid.Row="3"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_PLEURAL_FRICTION_NOISE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />

                                <Label Grid.Column="2" Grid.Row="3" Content="Сухие хрипы:" />
                                <ComboBox Grid.Column="3" Grid.Row="3"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_DRY_RALES, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />

                                <Label Grid.Column="4" Grid.Row="3" Content="Наличие отеков:" />
                                <ComboBox Grid.Column="5" Grid.Row="3"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_PRESENCE_OF_EDEMA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />

                                <Label Grid.Column="0" Grid.Row="4" Content="Распространенность отеков:" />
                                <ComboBox Grid.Column="1" Grid.Row="4"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_SYMPTOMS_INCIDENCE_OF_EDEMA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=incidenceEdemaLookup}" />
                            </Grid>
                        </HeaderedContentControl>
                        <HeaderedContentControl Grid.Row="4" Style="{StaticResource SubDisplayArea}" Margin="2">
                            <HeaderedContentControl.Header>
                                Рентгенография органов грудной клетки
                            </HeaderedContentControl.Header>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal"
                                            Grid.Row="0">
                                    <Label Content="Дата проведения:" />
                                    <xctk:MaskedTextBox Mask="00/00/0000" ValueDataType="{x:Type s:DateTime}">
                                        <Binding Path="FieldVISIT_ONE_XRAY_DATE_PROCEDURE" 
                                                 Mode="TwoWay" UpdateSourceTrigger="PropertyChanged"
                                                 ValidatesOnDataErrors="True" NotifyOnValidationError="True"/>
                                    </xctk:MaskedTextBox>
                                    <Label Content="Рентгенологические признаки пневмонии:" />
                                    <ComboBox
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=FieldVISIT_ONE_XRAY_PNEUMONIA_SIGNS, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=logic2Lookup}" />
                                </StackPanel>

                                <Border Grid.Row="1"
                                        Style="{StaticResource DetailBorder}">
                                    <Grid >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label Grid.Column="1" Grid.Row="0"
                                               Content="Правая верхняя доля" />
                                        <Label Grid.Column="2" Grid.Row="0"
                                               Content="Правая средняя доля" />
                                        <Label Grid.Column="3" Grid.Row="0"
                                               Content="Правая нижняя доля" />
                                        <Label Grid.Column="4" Grid.Row="0"
                                               Content="Левая верхняя доля" />
                                        <Label Grid.Column="5" Grid.Row="0"
                                               Content="Левая нижняя доля" />
                                        <Label Grid.Column="0" Grid.Row="1"
                                               Content="Альвеолярная инфильтрация" />
                                        <Label Grid.Column="0" Grid.Row="2"
                                               Content="Интерстициальная инфильтрация" />
                                        <Label Grid.Column="1" Grid.Row="3"
                                               Content="Нет" />
                                        <Label Grid.Column="2" Grid.Row="3"
                                               Content="Справа" />
                                        <Label Grid.Column="3" Grid.Row="3"
                                               Content="Слева" />
                                        <Label Grid.Column="4" Grid.Row="3" Grid.ColumnSpan="2"
                                               Content="Двусторонний" />
                                        <Label Grid.Column="0" Grid.Row="4"
                                               Content="Плевральный выпот" />
                                        <Label Grid.Column="0" Grid.Row="5"
                                               Content="Другие изменения" />


                                        <!--<CheckBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Checked="{Binding Path=FieldVISIT_ONE_XRAY_ALVEOLAR_INFILTRATION_RIGHT_TOP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />
                                        <CheckBox Grid.Column="2" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Checked="{Binding Path=FieldVISIT_ONE_XRAY_ALVEOLAR_INFILTRATION_RIGHT_MIDDLE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />
                                        <CheckBox Grid.Column="3" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Checked="{Binding Path=FieldVISIT_ONE_XRAY_ALVEOLAR_INFILTRATION_RIGHT_BOTTOM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />
                                        <CheckBox Grid.Column="4" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Checked="{Binding Path=FieldVISIT_ONE_XRAY_ALVEOLAR_INFILTRATION_LEFT_TOP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />
                                        <CheckBox Grid.Column="5" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Checked="{Binding Path=FieldVISIT_ONE_XRAY_ALVEOLAR_INFILTRATION_LEFT_BOTTOM, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />
                                        <CheckBox Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                Checked="{Binding Path=FieldVISIT_ONE_XRAY_INTERSTITIAL_INFILTRATION_RIGHT_TOP, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}"  />
