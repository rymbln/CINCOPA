                                          SelectedItem="{Binding Path=VISIT_ONE_ONE_SYMPTOMS_PLEURAL_FRICTION_NOISE, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=DinamicLookup}" />

                                    <Label Grid.Column="0" Grid.Row="10" Content="Сухие хрипы:" />
                                    <ComboBox Grid.Column="1" Grid.Row="10"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=VISIT_ONE_ONE_SYMPTOMS_DRY_RALES, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=DinamicLookup}" />

                                    <Label Grid.Column="0" Grid.Row="11" Content="Наличие отеков:" />
                                    <ComboBox Grid.Column="1" Grid.Row="11"  
                                          SelectedValuePath="." 
                                          SelectedItem="{Binding Path=VISIT_ONE_ONE_SYMPTOMS_PRESENCE_OF_EDEMA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True,NotifyOnValidationError=True}" 
                                          ItemsSource="{Binding Path=DinamicLookup}" />

                                    <Label Grid.Column="0" Grid.Row="12" Content="Распространенность отеков:" />
                                    <ComboBox Grid.Column="1" Grid.Row="12"  
                                          SelectedValuePath="." 
